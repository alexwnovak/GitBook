<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
   <Color x:Key="TitleBarColor">#222</Color>
   <SolidColorBrush x:Key="TitleBarBrush" Color="{StaticResource TitleBarColor}" />

   <Color x:Key="TitleBarForegroundColor">#DDD</Color>
   <SolidColorBrush x:Key="TitleBarForegroundBrush" Color="{StaticResource TitleBarForegroundColor}" />
</ResourceDictionary>