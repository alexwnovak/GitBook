<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:v="clr-namespace:GitWrite.Views">
   <Style x:Key="WindowStyle" TargetType="Window">
      <Setter Property="WindowChrome.WindowChrome">
         <Setter.Value>
            <WindowChrome ResizeBorderThickness="6" GlassFrameThickness="1" />
         </Setter.Value>
      </Setter>
      <Setter Property="Template">
         <Setter.Value>
            <ControlTemplate TargetType="Window">
               <Grid Background="{v:Settings BackgroundColor}">
                  <Grid.RowDefinitions>
                     <RowDefinition Height="30" />
                     <RowDefinition />
                  </Grid.RowDefinitions>

                  <Border Background="{StaticResource TitleBarBrush}">
                     <TextBlock Text="{TemplateBinding Title}"
                        Foreground="{StaticResource TitleBarForegroundBrush}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" />
                  </Border>

                  <Border Grid.Row="1">
                     <ContentPresenter />
                  </Border>
               </Grid>
            </ControlTemplate>
         </Setter.Value>
      </Setter>
   </Style>
</ResourceDictionary>
