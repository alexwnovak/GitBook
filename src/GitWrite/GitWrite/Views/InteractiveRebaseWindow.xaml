<views:WindowBase x:Class="GitWrite.Views.InteractiveRebaseWindow"
   x:Name="PageRoot"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
   xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Extras.WPF45"
   xmlns:views="clr-namespace:GitWrite.Views"
   xmlns:behaviors="clr-namespace:GitWrite.Behaviors"
   xmlns:controls="clr-namespace:GitWrite.Views.Controls"
   xmlns:res="clr-namespace:GitWrite.Properties"
   AllowsTransparency="True"
   Background="Transparent"
   Title="{Binding Title}"
   Width="1080"
   Height="700"
   ResizeMode="NoResize"
   WindowStyle="None"
   FocusManager.FocusedElement="{Binding ElementName=RebasePanel}"
   DataContext="{Binding InteractiveRebaseViewMdoel, Source={StaticResource ViewModelLocator}}">

   <Window.Resources>
      <ResourceDictionary>
         <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="..\Styles\TextBoxStyle.xaml" />
            <ResourceDictionary Source="..\Styles\ButtonStyle.xaml" />
         </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
   </Window.Resources>

   <Grid x:Name="MainGrid">
      <Grid.RowDefinitions>
         <RowDefinition Height="100" />
         <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <Border x:Name="OuterBorder"
         Grid.Row="1"
         CornerRadius="0,0,14,14"
         Margin="26,-24,26,12"
         VerticalAlignment="Top"
         Background="{StaticResource WindowBackgroundColor}"
         BorderThickness="2"
         BorderBrush="{StaticResource WindowBorderColor}">
         <controls:InteractiveRebasePanel x:Name="RebasePanel"
            ItemsSource="{Binding Items}" />
      </Border>

      <controls:MainEntryBox x:Name="MainEntryBox"
         Grid.Row="0"
         IsEditable="False"
         Text="{x:Static res:Resources.RebasingText}" />
   </Grid>
</views:WindowBase>
