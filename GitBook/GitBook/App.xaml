<Application x:Class="GitBook.App"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:gitBook="clr-namespace:GitBook"
   d1p1:Ignorable="d"
   StartupUri="MainWindow.xaml">
   <Application.Resources>
      <vm:ViewModelLocator x:Key="Locator" d:IsDataSource="True" xmlns:vm="clr-namespace:GitBook.ViewModel" />
      <gitBook:TextLengthInversionConverter x:Key="TextLengthInversionConverter" />
      <SolidColorBrush x:Key="AppTextColor" Color="#FFFFFF" />
      <SolidColorBrush x:Key="WindowOuterBorderColor" Color="#8000" />
      <SolidColorBrush x:Key="WindowBackgroundColor" Color="#A69864" />
      <SolidColorBrush x:Key="WindowCommitBackgroundColor" Color="#CBC5AF" />
      <SolidColorBrush x:Key="WindowCommitForegroundColor" Color="#FFFEF9" />
   </Application.Resources>
</Application>